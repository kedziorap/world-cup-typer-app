<main>
    <div class="container"> 
        <section class="content">
            <h2 class="text-center">Rejestracja</h2>
            {{#if errors}}
            {{#each errors}}
                <p class="alert alert-danger text-center">{{this.msg}}</p>
            {{/each}}
            {{/if}}
            <form class="main-form" method="post" action="/rejestracja/sendForm">
                <div class="form-group">
                    <label for="text">Login</label>
                    <input type="text" class="form-control" id="login" name="login" placeholder="Login" required>
                    <small id="loginHelp" class="form-text text-muted">Minimum 4 znaki. Spacja nie jest dozwolona.</small>
                </div>
                <div class="form-group">
                    <label for="text">Imię</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Twoje imię" required>
                    <small id="nameHelp" class="form-text text-muted">Minimum 3 znaki. Spacja nie jest dozwolona.</small>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Twój email" required>
                    <small id="emailHelp" class="form-text text-muted">Nie zostanie nigdzie upubliczniony.</small>
                </div>
                <div class="form-group">
                    <label for="passwordRepeat">Powtórz hasło</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Hasło" required>
                    <small id="passwordlHelp" class="form-text text-muted">Minimum 6 znaków. Spacja nie jest dozwolona.</small>
                </div>
                <div class="form-group">
                    <label for="passwordRepeat">Powtórz hasło</label>
                    <input type="password" class="form-control" id="passwordRepeat" name="passwordRepeat"  placeholder="Powtórz hasło" required>
                    
                </div>
                
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="regulamin" name="regulamin" required>
                    <label class="form-check-label" for="regulamin">Akceptuję <a href="/regulamin" target="_blank" class="">regulamin</a></label>
                </div>
                <button type="submit" class="btn btn-primary">Zarejestruj</button>
            </form>
        </section>
    </div>
</main>