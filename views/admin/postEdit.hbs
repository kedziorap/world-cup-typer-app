<main>
    <section>
        <div class="container">
            <h2 class="text-center">Edycja newsa</h2>
            <form action="/admin/posty/edit/{{post.id}}" method="post">
                <div class="form-group">
                    <label for="title">Tytuł</label>
                    <input type="text" name="title" id="title" class="form-control" value="{{post.title}}">
                </div>
                <div class="form-group">
                    <label for="content">Treść</label>
                    <textarea class="form-control" id="content" name="content" rows="6">{{post.content}}</textarea>
                </div>
                <input type="submit" value="Potwierdź" class="btn btn-success">
            </form>
        </div>
    </section>
</main>